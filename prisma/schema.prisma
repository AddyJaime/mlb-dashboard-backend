generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum League {
  AL
  NL
}

model Stadium {
  id                          Int  @id @default(autoincrement())
  name                    String
  name_team          String
  city                        String
  description           String
  state                     String
  league                  League
  capacity               Int
  year_open            Int
 longitude              Decimal
  latitude                Decimal
  image_url             String
  left_field_ft           Int
  center_field_ft     Int
  right_field_ft        Int
  total_games         Int
  home_win_percentage Decimal
  perfect_games       Int
  created_at                DateTime @default(now())
   updated_at               DateTime @updatedAt




}